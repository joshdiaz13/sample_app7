<% provide(:title, 'Add Product') %>
<h1>Add Product</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@product) do |f| %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :price %>
      <%= f.text_field :price %>

      <br>

      <%= f.submit "Add Product", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>